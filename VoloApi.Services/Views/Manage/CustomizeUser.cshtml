@model VoloApi.Services.Models.CustomizeUserBindingModel
@{
    ViewBag.Title = "CustimizeUser";
}

<h2>Custimize User</h2>

@using (Html.BeginForm("CustomizeUser", "Manage", new { id = ViewBag.UserId},FormMethod.Post,new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <label class="control-label">@ViewBag.Email</label>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.OldRole, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <label class="control-label">@ViewBag.OldRole</label>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RoleId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.RoleId, new SelectList(Model.Roles, "Name", "Name"), "Please select Role", new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


